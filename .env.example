# Database
MONGODB_URI=mongodb://localhost:27017/notification-system

# Server
PORT=3000
NODE_ENV=development

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu-email@gmail.com
EMAIL_PASS=sua-senha-de-app

# Evolution API Configuration
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=seu-api-key-aqui
EVOLUTION_INSTANCE_NAME=notificacoes

# n8n Configuration (opcional - para webhooks)
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_ENABLED=false

# Google Sheets Configuration
GOOGLE_SHEETS_ENABLED=true
GOOGLE_SHEETS_ID=seu-id-da-planilha-aqui
GOOGLE_SERVICE_ACCOUNT_EMAIL=seu-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_AQUI\n-----END PRIVATE KEY-----\n"

# Abas da Planilha
GOOGLE_SHEETS_USERS_TAB=Usuarios
GOOGLE_SHEETS_PAYMENTS_TAB=Pagamentos

# Sincronização
GOOGLE_SHEETS_SYNC_SCHEDULE=*/10 * * * *

# Notification Schedule (Cron Format)
# Default: Verifica todos os dias às 8:00 AM
NOTIFICATION_SCHEDULE=0 8 * * *

# Dias de antecedência para notificar
BIRTHDAY_ADVANCE_DAYS=1
PAYMENT_ADVANCE_DAYS=3
